@page "/"

<PageTitle>Index</PageTitle>

<h1>Hello, Guy! Hello, world!</h1>

<!-- Rectangle with a dynamic style -->
<div style="width: 200px; height: 200px; background-color: @rectangleColor;"></div>

<!-- Two buttons to change the color -->
<button @onclick="ChangeToRed">Change to Red</button>
<button @onclick="ChangeToYellow">Change to Yellow</button>

@code {
    // Initialize the rectangle color as white
    private string rectangleColor = "blue";

    // Event handler for changing to red
    private void ChangeToRed()
    {
        rectangleColor = "red";
    }

    // Event handler for changing to yellow
    private void ChangeToYellow()
    {
        rectangleColor = "yellow";
    }
}
